<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BCA3AE"
    tools:context=".CalculateActivity">

    <Button
        android:id="@+id/btnCheckCalculate"
        android:layout_width="135dp"
        android:layout_height="54dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#6A334B"
        android:text="Check"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/ptAnswerCalculate"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="@+id/ptAnswerCalculate"
        app:layout_constraintTop_toBottomOf="@+id/ptAnswerCalculate" />

    <Button
        android:id="@+id/btnBackCalculate"
        android:layout_width="135dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#6A334B"
        android:text="Back"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/btnCheckCalculate"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btnCheckCalculate"
        app:layout_constraintTop_toBottomOf="@+id/btnCheckCalculate" />

    <TextView
        android:id="@+id/txtTitleCalculate"
        android:layout_width="320dp"
        android:layout_height="51dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/almendra_sc"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="Solve The Exercise"
        android:textColor="#FFF1E6D2"
        android:textColorHint="#F1E6D2"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtOperationCalculate"
        android:layout_width="126dp"
        android:layout_height="46dp"
        android:layout_marginStart="-22dp"
        android:layout_marginTop="56dp"
        android:gravity="center"
        android:hint="+/-"
        android:textColorHint="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/txtNum1Calculate"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleCalculate" />

    <TextView
        android:id="@+id/txtNum1Calculate"
        android:layout_width="126dp"
        android:layout_height="46dp"
        android:layout_marginStart="-6dp"
        android:layout_marginTop="56dp"
        android:gravity="center"
        android:hint="Num1"
        android:textColorHint="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/txtTitleCalculate"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleCalculate" />

    <TextView
        android:id="@+id/txtNum2Calculate"
        android:layout_width="126dp"
        android:layout_height="46dp"
        android:layout_marginTop="56dp"
        android:gravity="center"
        android:hint="Num2"
        android:textColorHint="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/txtTitleCalculate"
        app:layout_constraintHorizontal_bias="0.709"
        app:layout_constraintStart_toEndOf="@+id/txtOperationCalculate"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleCalculate" />

    <EditText
        android:id="@+id/ptAnswerCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Your guess"
        android:inputType="text"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/txtNum2Calculate"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="@+id/txtNum1Calculate"
        app:layout_constraintTop_toBottomOf="@+id/txtOperationCalculate" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnBackCalculate"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="@+id/btnBackCalculate"
        app:layout_constraintTop_toBottomOf="@+id/btnBackCalculate"
        app:layout_constraintVertical_bias="0.491"
        app:srcCompat="@drawable/flower_pic" />

</androidx.constraintlayout.widget.ConstraintLayout>