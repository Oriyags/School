<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CEF6FB"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/ibPhone"
        android:layout_width="81dp"
        android:layout_height="77dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="8dp"
        android:background="#CEF6FB"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ibMessages"
        app:layout_constraintTop_toBottomOf="@+id/ibMap"
        app:layout_constraintVertical_bias="0.818"
        app:srcCompat="@drawable/phone_pic" />

    <ImageButton
        android:id="@+id/ibWhatsapp"
        android:layout_width="97dp"
        android:layout_height="87dp"
        android:background="#CEF6FB"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ibMap"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/ibCamera"
        app:layout_constraintTop_toBottomOf="@+id/ibMap"
        app:layout_constraintVertical_bias="0.838"
        app:srcCompat="@drawable/whatsapp_pic" />

    <ImageButton
        android:id="@+id/ibCamera"
        android:layout_width="120dp"
        android:layout_height="102dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="#CEF6FB"
        android:foregroundGravity="center_horizontal"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ibPhone"
        app:layout_constraintTop_toBottomOf="@+id/ibMap"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/camera_pic" />

    <ImageButton
        android:id="@+id/ibMessages"
        android:layout_width="86dp"
        android:layout_height="79dp"
        android:background="#CEF6FB"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ibMap"
        app:layout_constraintTop_toBottomOf="@+id/ibMap"
        app:layout_constraintVertical_bias="0.871"
        app:srcCompat="@drawable/sms_pic" />

    <ImageButton
        android:id="@+id/ibMap"
        android:layout_width="382dp"
        android:layout_height="181dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/ivPeople"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="@+id/ivPeople"
        app:layout_constraintTop_toBottomOf="@+id/ivPeople"
        app:srcCompat="@drawable/map_pic" />

    <ImageView
        android:id="@+id/ivPeople"
        android:layout_width="300dp"
        android:layout_height="292dp"
        app:layout_constraintEnd_toEndOf="@+id/ibChrome"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="@+id/ibChrome"
        app:layout_constraintTop_toBottomOf="@+id/ibChrome"
        app:srcCompat="@drawable/people_pic" />

    <ImageButton
        android:id="@+id/ibChrome"
        android:layout_width="380dp"
        android:layout_height="83dp"
        android:layout_marginTop="32dp"
        android:background="#CEF6FB"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/chrome_pic" />

</androidx.constraintlayout.widget.ConstraintLayout>